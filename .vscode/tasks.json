{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile_release",
            "type": "shell",
            "command": "cd Release && ninja -j16 && ninja install",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        }
    ]
}
